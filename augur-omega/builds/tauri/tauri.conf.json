{
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:8080",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "package": {
    "productName": "Augur Omega",
    "version": "1.0.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "ai.augur.omega",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": ""
    },
    "allowlist": {
      "all": true
    },
    "windows": [
      {
        "label": "main",
        "url": "index.html",
        "title": "Augur Omega"
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https://*; font-src 'self' https://*;"
    }
  }
}